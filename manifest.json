{
    "manifest_version": 3,
    "name": "Color Changer",
    "version": "1.0",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "assets/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "options_page": "options/options.html",
    "host_permissions": [
        "<all_urls>"
    ],
    "commands": {
        "toggle-theme": {
            "suggested_key": {
                "default": "Ctrl+Shift+S"
            },
            "description": "Toggle color theme for current site"
        }
    }
}